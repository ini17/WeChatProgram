.act_pict{
  width: 100%;
  z-index: -1;
}

.title{
  margin: 20rpx;
  font-size: 40rpx;
  font-weight: 700;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
}

.details{
  font-size: small;
  margin-top: 20rpx;
  margin-left: 30rpx;
  color: gray;
  text-align: left;
}

.article{
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20%;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 30rpx;
  line-height: 60rpx;
}

.bot{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 8%;
  background: white;
}
.collect{
  float: left;
  width: 40%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin: auto;
  color: #57C6F3;
}

.past{
  display: flex;
  align-items: center;
  justify-content: center;
  float: right;
  width: 60%;
  height: 80%;
  text-align: center;
  background-color:#F2F2F2;
  border-radius: 10rpx;
  color:#C6C6C6 ;
}
