.act_pict{
  width: 100%;
  z-index: -1;
}

.title{
  margin: 20rpx;
  font-size: 40rpx;
  font-weight: 700;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
}

.details{
  font-size: small;
  margin-top: 20rpx;
  margin-left: 30rpx;
  color: gray;
  text-align: left;
}

.article{
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.bot{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 8%;
  background: white;
}

.collet{
  float: left;
  width: 40%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin: auto;
}

.signup{
  display: flex;
  align-items: center;
  justify-content: center;
  float: right;
  width: 60%;
  height: 80%;
  text-align: center;
  background-color: mediumslateblue;
  border-radius: 10rpx;
  color: #f6f6f6;
}